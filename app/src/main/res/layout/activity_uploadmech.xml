<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".uploadfile">

    <EditText
        android:id="@+id/filetitlemech"
        android:layout_width="301dp"
        android:layout_height="48dp"
        android:background="@drawable/round_button"
        android:ems="10"
        android:hint="File Name"
        android:textAlignment="center"
        android:textColor="@color/ic_launcher_background"
        android:textColorHint="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button29mech"
        android:layout_width="148dp"
        android:layout_height="53dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/upload"
        android:fontFamily="@font/amiko_bold"
        android:soundEffectsEnabled="true"
        android:text="Upload"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/filetitlemech"
        app:layout_constraintStart_toStartOf="@+id/filetitlemech"
        app:layout_constraintTop_toBottomOf="@+id/filetitlemech" />

    <ImageView
        android:id="@+id/addmech"
        android:layout_width="179dp"
        android:layout_height="180dp"
        android:background="@drawable/d"
        app:layout_constraintBottom_toTopOf="@+id/filetitlemech"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.677"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/pdfmech"
        android:layout_width="170dp"
        android:layout_height="161dp"
        android:background="@drawable/mn1"
        app:layout_constraintBottom_toTopOf="@+id/button29mech"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/canclemech"
        android:layout_width="32dp"
        android:layout_height="33dp"
        android:background="@drawable/c"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.693"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>